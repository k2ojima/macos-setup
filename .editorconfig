# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.md]
trim_trailing_whitespace = false

# Use 2 spaces for the HTML files
[*.html]
indent_size = 2

# The JSON files contain newlines inconsistently
[*.{json,yaml,yml}]
indent_size = 2
insert_final_newline = ignore

[*.tf]
indent_size = 2
